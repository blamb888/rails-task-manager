<div class="container my-3">
  <div class="card-product col-12 p-2">
    <img src="https://source.unsplash.com/featured/?household,chores" />
    <div class="card-product-infos">
      <h1><%= @task.title %></h1>
      <h2><%= @task.details %></h2>
        <% if @task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
      <div>
        <%= link_to task_path(@task), method: :delete, class: 'btn btn-danger', data: { confirm: "Delete #{@task.title}" } do %>
          <i class="fas fa-times"></i> Delete
        <% end %>
        <%= link_to  "Back", tasks_path, class: 'btn btn-light' %>
      </div>
    </div>
  </div>
</div>
