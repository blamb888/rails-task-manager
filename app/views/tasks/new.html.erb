<div class="container">
  <div class="card" style="width: 18rem; margin-top: 50px;">
    <div class="card-body">
      <h5 class="card-title">New Tasks</h5>
      <p class="card-text">
        <%= form_for @task do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :details %>
          <%= f.text_field :details %>
        </div>
      </p>
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to  "Back", tasks_path, class: 'btn btn-light' %>
    <% end %>  </div>
  </div>
</div>
